<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheet/home.css">

<section class="container-fluid p-5 position-relative">
  <!-- Blue spotlight overlay -->
  <div class="blue-spotlight"></div>

  <div class="row align-items-center content-layer">
    <!-- Right side with caption text -->
    <div class="col-lg-6 p-5">
      <h1 class="display-4">
        Your 24/7 Partner in
        <span id="animatedText" class="text-highlight">Innovation</span>
      </h1>
      <h2 class="mb-3">Empowering Growth Through Expert Solutions</h2>
      <p class="mb-4">
        From seamless customer support to advanced technical solutions, we specialize in making your business shine. 
        Whether you're enhancing online visibility, optimizing customer service, or building powerful digital experiences, 
        our team is here to elevate every aspect of your journey. Discover how we bring innovation to life, around the clock.
      </p>
      <button type="button" class="btn2">
        <strong>Our Services</strong>
        <div id="container-stars">
          <div id="stars"></div>
        </div>
      
        <div id="glow">
          <div class="circle"></div>
          <div class="circle"></div>
        </div>
      </button>
    </div>

    <!-- Left side with the video in the background -->
    <div class="col-lg-6 d-flex align-items-center justify-content-center">
      <video autoplay loop muted playsinline controlsList="nodownload" class="img-fluid responsive-video">
        <source src="/images/Final.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    
    </div>
  </div>

  <div class="container">
  <section class="customer-logo-section text-start mb-2">
    <!-- Left-aligned header -->
    <h2 class="logo-label ms-3">Partnered with the Best</h2>
  
    <!-- Centered logo container -->
    <div class="logo-container text-center">
    
      <!-- First Client: Netvue -->
      <div class="logo-box text-center">
        <img src="/images/Netvue.png" alt="Netvue Logo" class="client-logo">
      </div>
      
      <!-- Second Client: Birdfy -->
      <div class="logo-box text-center">
        <img src="/images/Birdfy.png" alt="Birdfy Logo" class="client-logo">
      </div>
    
    </div>
  </section>


  <section class="services-section py-5 mb-2">
    <h2 class="services-title text-start mb-5">Discover the Future with Bluelight</h2>
    <div class="container-fluid p-5">
      <div class="row gx-5">
        <!-- Customer Service Card -->
        <div class="col-md-4">
          <div class="card service-item">
            <div class="service-icon img">
              <i class="fas fa-headset"></i>
            </div>
            <div class="textBox">
              <p class="service-title">Customer Service</p>
              <p class="service-description">
                Our dedicated team provides round-the-clock customer service, ensuring that every inquiry and concern is handled swiftly and professionally.
              </p>
            </div>
          </div>
        </div>
  
        <!-- Technical Support Card -->
        <div class="col-md-4">
          <div class="card service-item">
            <div class="service-icon img">
              <i class="fas fa-tools"></i>
            </div>
            <div class="textBox">
              <p class="service-title">Technical Support</p>
              <p class="service-description">
                From troubleshooting technical challenges to optimizing system performance, our experts are here to keep your operations running smoothly.
              </p>
            </div>
          </div>
        </div>
  
        <!-- SEO Card -->
        <div class="col-md-4">
          <div class="card service-item">
            <div class="service-icon img">
              <i class="fas fa-chart-line"></i>
            </div>
            <div class="textBox">
              <p class="service-title">SEO</p>
              <p class="service-description">
                Our SEO specialists focus on visibility, reach, and engagement, enabling your brand to connect with a wider audience.
              </p>
            </div>
          </div>
        </div>
  
        <!-- Email Support Card -->
        <div class="col-md-4">
          <div class="card service-item">
            <div class="service-icon img">
              <i class="fas fa-envelope"></i>
            </div>
            <div class="textBox">
              <p class="service-title">Email Support</p>
              <p class="service-description">
                We manage and respond to customer inquiries with precision, ensuring every interaction is efficient and solution-focused.
              </p>
            </div>
          </div>
        </div>
  
        <!-- Advertisements Card -->
        <div class="col-md-4">
          <div class="card service-item">
            <div class="service-icon img">
              <i class="fas fa-bullhorn"></i>
            </div>
            <div class="textBox">
              <p class="service-title">Advertisements</p>
              <p class="service-description">
                We design targeted ad campaigns to amplify your brand message and reach your desired audience effectively.
              </p>
            </div>
          </div>
        </div>
  
        <!-- Web Development Card -->
        <div class="col-md-4">
          <div class="card service-item">
            <div class="service-icon img">
              <i class="fas fa-code"></i>
            </div>
            <div class="textBox">
              <p class="service-title">Web Development</p>
              <p class="service-description">
                Our web development team builds responsive, dynamic, and user-friendly websites that enhance user experience.
              </p>
            </div>
          </div>
        </div>
  
      </div>
    </div>
  </section>
  
  

<section class="analytics-section py-5 mb-2">
  <div class="container-fluid">
    <h2 class="analytics-title mb-5">Business Analytics Growth for 2024</h2>
    <div class="row align-items-center">
      <!-- Description and Metrics on the Left -->
      <div class="col-lg-6">
        <p class="analytics-description">
          Our analytics solutions for 2024 empower businesses with data-driven insights, fostering growth and efficiency. Discover how Bluelight's expertise can lead you to optimal results.
        </p>
        <div class="metrics">
          <div class="metric-box">
            <p class="metric-title">Revenue</p>
            <h3 class="metric-value" data-target="105000">$0</h3>
            <p class="metric-change">▲ 49.52%</p>
          </div>
          <div class="metric-box">
            <p class="metric-title">Total Organic Keywords</p>
            <h3 class="metric-value" data-target="2982">$0</h3>
            <p class="metric-change">▲ 849.7%</p>
          </div>
          <div class="metric-box">
            <p class="metric-title">Impressions</p>
            <h3 class="metric-value" data-target="211967">$0</h3>
            <p class="metric-change">▲ 381.9%</p>
          </div>
          <div class="metric-box">
            <p class="metric-title">Clicks</p>
            <h3 class="metric-value" data-target="1538">$0</h3>
            <p class="metric-change">▲ 83.1%</p>
          </div>
        </div>
      </div>

      <!-- 3D Chart on the Right -->
      <div class="col-lg-6 d-flex justify-content-center">
        <canvas id="analyticsChart" width="400" height="300"></canvas>
      </div>
    </div>
  </div>
</section>




<section class="reviews-section mb-5 mb-2">
  <h2 class="review-title text-start mb-5">Bluelight is loved by our customers</h2>
  <div class="review-container">
    <% reviews.forEach(review => { %>
      <div class="review" onmouseover="pauseAnimation()" onmouseout="resumeAnimation()">
        <img 
          src="<%= review.image || '/images/thumbnail.png' %>" 
          alt="<%= review.name %>" 
          class="review-image"
        >
        <div class="review-text">
          <h4 class="review-name"><%= review.name %></h4>
          <p><%= review.text %></p>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<section class="contact-section py-5 mb-2">
  <div class="container">
    <h2 class="contact-title text-start mb-5">Get in Touch with Bluelight</h2>
    <form action="/send" method="POST" class="contact-form" id="contactForm">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      <div class="mb-3">
        <label for="subject" class="form-label">Subject</label>
        <input type="text" class="form-control" id="subject" name="subject" required>
      </div>
      <div class="mb-3">
        <label for="message" class="form-label">Message</label>
        <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Send Message</button>
    </form>
    <div id="responseMessage" class="mt-4" style="display: none;"></div> <!-- Message container -->
  </div>
</section>


</div>

<section  id="contact" class="contact-section py-5 mb-2">
  <h2 class="text-center mb-4">Get in Touch with Bluelight</h2>
  <p class="text-center mb-5">Ready to elevate your business? Contact us for tailored solutions, expert advice, and partnership opportunities. We're here to help you succeed.</p>
  <div class="container  form-container">

    <form action="/send" method="POST" class="contact-form" id="contactForm">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control bg-dark text-white" id="name" name="name" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control bg-dark text-white" id="email" name="email" required>
      </div>
      <div class="mb-3">
        <label for="subject" class="form-label">Subject</label>
        <input type="text" class="form-control bg-dark text-white" id="subject" name="subject" required>
      </div>
      <div class="mb-3">
        <label for="message" class="form-label">Message</label>
        <textarea class="form-control bg-dark text-white" id="message" name="message" rows="4" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Send Message</button>
    </form>
    <div id="responseMessage" class="mt-4" style="display: none;"></div> <!-- Message container -->
  </div>
</section>

